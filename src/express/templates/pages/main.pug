extends layout

block content
  main.main-page
    h1.visually-hidden= hiddenTitle
    p= description
    if Boolean(previews.length)
      section.main-page__theme-list
        h2.visually-hidden Список тем
        include ../common/themes
      include ../common/section-flex/section-flex
      include ../common/article-preview-list/article-preview-list
      +pagination(page, totalPages, 2, `?`)
    else
      include ../common/empty/empty-section
