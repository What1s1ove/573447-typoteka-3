extends ../layout

block content
  main
    section
      div.popup.popup--new-publication.popup--anti
        div.new-publication
          div.new-publication__header
            h1 #{article.id ? `Редактирование публикаци` : `Новая публикация`}
            div.new-publication__date-form
              h3 Дата публикации
              form(action='#' method='POST')
                div.new-publication__date-form-division
                  div.new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='date' placeholder='2019-03-21')
            button.new-publication__button.button.button--colored(type='submit') Опубликовать
          button.popup__button.button.button--popup-close(type='button' aria-label='Закрыть окно') Закрыть окно
          div.new-publication__form.form
            form(action='#' method='get')
              div.form__wrapper.form__wrapper--intro
                div.form__field
                  label
                    input(type='text' placeholder='Заголовок' value=article.title required)
                div.form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' placeholder='Фотография' readonly)
                  div.form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file')
                      | Обзор
                  button.button.button--transparent Удалить
                div.new-publication__category-wrapper
                  each category in categories
                    div.new-publication__checkbox.new-publication__checkbox--auto
                      input(id=category type='checkbox' name=category)
                      label(for=category) #{category}
                  a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              div.form__wrapper.form__wrapper--text
                div.form__field.form__field--publication-text
                  label
                    textarea(rows='2' placeholder='Анонс публикации') #{article.announce}
                div.form__field.form__field--publication-text
                  label
                    textarea(rows='5' placeholder='Полный текст публикации') #{article.fullText}
